    <target name="download-sdk" depends="clean">
        <exec executable="git">
            <arg value="clone" />
            <arg value="--depth" />
            <arg value="1" />
            <arg value="${sdkGitRepositoryUrl}" />
            <arg value="${sdkDir}" />
        </exec>
