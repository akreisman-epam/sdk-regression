<project name="Hyperwallet api python test" default="dist" basedir=".">

    <property name="distDir" location="dist"/>
    <property name="sdkDir" location="${distDir}/sdk"/>
    <property name="stepsDir" location="${distDir}/steps"/>

    <property name="sdkGitRepositoryUrl" value="https://github.com/akreisman-epam/python-sdk.git"/>
    <property name="stepsGitRepositoryUrl" value="https://github.com/asolianyk-epam/python-sdk-examples.git"/>
    <property name="runStepCommand" value="python"/>
    <property name="runStepCommandArgs" value=""/>

    <property name="stepName_createPaymentStatusTransition" value="createPaymentStatusTransition.py"/>
    <property name="stepName_updatePrepaidCard" value="updatePrepaidCard.py"/>

    <import file="test-scenario.xml"/>

    <!-- Unused steps -->
    <target name="stepCreateBankCard"/>
    <target name="stepGetBankCard"/>
    <target name="stepListBankCard"/>
    <target name="stepUpdateBankCard"/>
    <target name="stepDeactivateBankCard"/>
    <target name="stepCreateBankCardStatusTransition"/>
    <target name="stepGetBankCardStatusTransition"/>
    <target name="stepListBankCardStatusTransition"/>
    <target name="stepCreatePaperCheck"/>
    <target name="stepGetPaperCheck"/>
    <target name="stepListPaperCheck"/>
    <target name="stepUpdatePaperCheck"/>
    <target name="stepDeactivatePaperCheck"/>
    <target name="stepCreatePaperCheckStatusTransition"/>
    <target name="stepGetPaperCheckStatusTransition"/>
    <target name="stepListPaperCheckStatusTransition"/>
    <!-- **************** -->

    <target name="init" depends="download-sdk, download-steps">
        <exec executable="pip" dir="${distDir}">
            <arg value="install"/>
            <arg value="./sdk"/>
            <arg value="--upgrade"/>
        </exec>
    </target>

    <target name="dist" depends="init, testApi"/>

</project>